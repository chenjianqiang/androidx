<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.cjq.androidx.view.TextureViewN
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.cjq.androidx.view.TextureViewN
        android:id="@+id/replay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnReplay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_camera_play"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/vgControls"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_record_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btnSwitchCamera"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_switch_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vgControls"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_camera_cancel"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/btnStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnStart"/>

        <ImageButton
            android:id="@+id/btnConfirm"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_camera_confirm"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/btnStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnStart"/>

        <com.cjq.androidx.view.CountDownView
            android:id="@+id/btnStart"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/selector_camera_record"
            app:layout_constraintBottom_toTopOf="@+id/rgActionType"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvCancelLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btnCancel"
            app:layout_constraintRight_toRightOf="@+id/btnCancel"/>

        <TextView
            android:id="@+id/tvConfirmLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="#69BA59"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btnConfirm"
            app:layout_constraintRight_toRightOf="@+id/btnConfirm"/>

        <RadioGroup
            android:id="@+id/rgActionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/rbTakePhoto"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/btnStart"
            app:layout_constraintRight_toRightOf="@+id/btnStart"
            >

            <RadioButton
                android:id="@+id/rbTakePhoto"
                android:layout_width="44dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:button="@null"
                android:gravity="center"
                android:text="相机"
                android:textColor="@color/selector_camera_action_type"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rbRecordVideo"
                android:layout_width="44dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:button="@null"
                android:gravity="center"
                android:text="录像"
                android:textColor="@color/selector_camera_action_type"
                android:textSize="12sp"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
